
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to all documents only for authenticated users.
    // This is a basic rule; you might want to refine it later for more granular control
    // (e.g., users can only edit their own data).
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
